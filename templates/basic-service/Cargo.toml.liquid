[package]
name = "{{ project_name }}"
version = "0.1.0"
edition = "2021"
{% if author != "" %}authors = ["{{ author }}{% if author_email != "" %} <{{ author_email }}>{% endif %}"]
{% endif %}license = "{{ license }}"
description = "{{ description }}"

[dependencies]
jam-pvm-common = { version = "0.1", default-features = false, features = ["service"] }
polkavm-derive = "0.29"

[profile.release]
panic = "abort"
lto = true
opt-level = "z"
